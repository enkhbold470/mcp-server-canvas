{
    "name": "canvas-mcp-server",
    "version": "1.0.0",
    "description": "Canvas MCP server for student assistance",
    "entrypoint": "./dist/index.js",
    "type": "mcp",
    "commands": {
      "build": "tsc",
      "start": "node dist/index.js",
      "dev": "ts-node-esm src/index.ts"
    },
    "env": {
      "CANVAS_API_URL": {
        "description": "Canvas API URL (e.g., https://canvas.instructure.com/api/v1)",
        "required": true
      },
      "CANVAS_API_TOKEN": {
        "description": "Canvas API token from your Canvas account",
        "required": true
      }
    },
    "operations": [
      {
        "name": "getStudentDashboard",
        "description": "Get complete student information with courses, assignments, and todos",
        "inputSchema": {},
        "outputSchema": {
          "type": "object",
          "properties": {
            "student": {
              "type": "object"
            },
            "assignments": {
              "type": "object"
            },
            "todos": {
              "type": "array"
            },
            "course_summaries": {
              "type": "array"
            }
          }
        }
      },
      {
        "name": "getUpcomingAssignments",
        "description": "Get a list of upcoming assignments sorted by due date",
        "inputSchema": {
          "type": "object",
          "properties": {
            "limit": {
              "type": "number",
              "description": "Maximum number of assignments to return",
              "default": 5
            }
          }
        },
        "outputSchema": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      },
      {
        "name": "getPastDueAssignments",
        "description": "Get a list of past due assignments",
        "inputSchema": {},
        "outputSchema": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      },
      {
        "name": "getAllAssignmentSummaries",
        "description": "Get a summary of all assignments (upcoming, past due, completed)",
        "inputSchema": {},
        "outputSchema": {
          "type": "object",
          "properties": {
            "upcoming": {
              "type": "array"
            },
            "past_due": {
              "type": "array"
            },
            "completed": {
              "type": "array"
            }
          }
        }
      },
      {
        "name": "getCourseAssignmentSummary",
        "description": "Get assignment summary for a specific course",
        "inputSchema": {
          "type": "object",
          "properties": {
            "courseId": {
              "type": "number",
              "description": "Canvas course ID"
            }
          },
          "required": ["courseId"]
        },
        "outputSchema": {
          "type": "object",
          "properties": {
            "upcoming": {
              "type": "array"
            },
            "past_due": {
              "type": "array"
            },
            "completed": {
              "type": "array"
            }
          }
        }
      },
      {
        "name": "getCourseSummary",
        "description": "Get a course summary with assignments and grades",
        "inputSchema": {
          "type": "object",
          "properties": {
            "courseId": {
              "type": "number",
              "description": "Canvas course ID"
            }
          },
          "required": ["courseId"]
        },
        "outputSchema": {
          "type": "object",
          "properties": {
            "course": {
              "type": "object"
            },
            "upcoming_assignments": {
              "type": "array"
            },
            "grades": {
              "type": "object"
            }
          }
        }
      },
      {
        "name": "searchAssignments",
        "description": "Search for assignments across all courses",
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "Search query"
            }
          },
          "required": ["query"]
        },
        "outputSchema": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      },
      {
        "name": "getAssignmentsByCourse",
        "description": "Get assignments organized by course",
        "inputSchema": {},
        "outputSchema": {
          "type": "object",
          "additionalProperties": {
            "type": "array"
          }
        }
      }
    ]
  } 